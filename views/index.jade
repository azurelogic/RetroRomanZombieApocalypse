extends layout

block scripts
  //script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
  script(type="text/javascript",src="/socket.io/socket.io.js")
  script(type="text/javascript",src="/js/easeljs-0.6.0.min.js")
  script(type="text/javascript",src="/js/lodash.js")
  script(type="text/javascript",src="/js/uuid.js")
  script(type="text/javascript",src="/js/knockout-2.2.1.js")
  script(type="text/javascript",src="/js/classes.js")
  script(type="text/javascript",src="/js/main.js")


block content
  body(onload="init();")
    #roomContainer(data-bind="visible: !gameStarted()")
      #roomData
        #totalRooms
          h3 Total # of rooms:&nbsp;
            span(data-bind="text: totalRooms")
        #availableRooms
          h3 # of rooms available:&nbsp;
            span(data-bind="text: rooms().length")
        #playersInRooms
          h3 # of players in game:&nbsp;
            span(data-bind="text: playersInRooms")
        button(data-bind="click: $root.getRoomUpdate") Refresh Rooms
      #roomList(data-bind="foreach: rooms")
        .room(data-bind="click: $root.joinRoom")
          .roomId
            span Room ID:
            span(data-bind="text: roomId")
          .playerCount
            span # of players:
            span(data-bind="text: playerCount")
    #gameContainer(data-bind="visible: gameStarted")
      canvas#gameCanvas(width=500,height=500) no canvas support
      #gameData
        #healthStats(data-bind="visible: !dead()")
          h2 Health:
          h1(data-bind="text: health")
        h1(data-bind="visible: dead") YOU DIED!
        h2 Score:
        h1(data-bind="text: points")
        button(data-bind="click: returnToRoomList") Return to room list